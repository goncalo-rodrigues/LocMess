<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulisboa.tecnico.locmess.NewLocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:fontFamily="sans-serif-condensed" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/location_name"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="Coordinates:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:text="@string/gps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gps"
                android:onClick="gpsClicked" />

            <RadioButton
                android:text="@string/wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wifi"
                android:onClick="wifiClicked" />

        </RadioGroup>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/chose_gps">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/latitude_bundle" >

                <TextView
                    android:text="@string/latitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/latitude_text" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/latitude"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/longitude_bundle" >

                <TextView
                    android:text="@string/longitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/longitude_text" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/longitude"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radius_bundle" >

                <TextView
                    android:text="@string/radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radius_text" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/radius"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="@string/use_my_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_location_bt"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button"
                    android:onClick="getCurrentLocation"/>

                <Button
                    android:text="@string/choose_from_map"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/map_location_bt"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button" />

            </LinearLayout>

            <Button
                android:text="@string/create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/accept_gps"
                style="@style/Widget.AppCompat.Button.Colored" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chose_wifi"
            android:orientation="vertical"
            android:visibility="gone">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wifi_ids_list"/>

            <Button
                android:text="@string/create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/accept_wifi"
                style="@style/Widget.AppCompat.Button.Colored" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/drawer_layout" />

</android.support.v4.widget.DrawerLayout>
