<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulisboa.tecnico.locmess.PostMessageActivity"
    >
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ScrolView1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearLayou1" >

                <TextView
                    android:text="@string/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationsSpinner"
                    android:entries="@array/drawer_items"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:text="@string/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/message" />

                <EditText
                    android:inputType="textMultiLine"
                    android:gravity="start"
                    android:textAlignment="textStart"
                    android:minLines="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:ems="10"
                    android:id="@+id/editText2"
                    android:hint="@string/hintInsertMessage"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:text="@string/from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pick_date"
                        android:onClick="showStartDatePickerDialog"
                        android:id="@+id/start_date_button" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pick_time"
                        android:onClick="showStartTimePickerDialog"
                        android:id="@+id/start_time_button"/>




                </LinearLayout>

                <TextView
                    android:text="@string/to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pick_date"
                        android:onClick="showEndDatePickerDialog"
                        android:id="@+id/end_date_button" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pick_time"
                        android:onClick="showEndTimePickerDialog"
                        android:id="@+id/end_time_button"/>






                </LinearLayout>
                <TextView
                    android:text="@string/filters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_weight="1" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <AutoCompleteTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:id="@+id/send_m_new_key_autotv"
                        android:completionThreshold="1"
                        android:hint="@string/key"
                        />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:id="@+id/send_m_new_value_tv"
                        android:hint="@string/value"/>
                    <ToggleButton
                        android:text="ToggleButton"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_alignLeft="@+id/send_m_new_value_tv"
                        android:layout_alignStart="@+id/editText"
                        android:id="@+id/toggle_Button_Blacklist"
                        android:textSize="10sp"
                        android:textOff="@string/witheList"
                        android:textOn="@string/blackList"/>

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_add_black"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:id="@+id/send_m_add_keyval_bt"
                        android:background="?android:selectableItemBackground"
                        />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/send_message_key_value_list">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <include layout="@layout/drawer_layout"/>
</android.support.v4.widget.DrawerLayout>

