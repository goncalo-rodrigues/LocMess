<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ulisboa.tecnico.locmess">


    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name="pt.ulisboa.tecnico.locmess.globalvariable.NetworkGlobalState"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".InitActivity"
            android:theme="@style/AppTheme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" >
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>
        <activity android:name=".PostMessageActivity" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".ProfileActivity" />
        <activity android:name=".LoginActivity" android:theme="@style/AppTheme.NoTitleBar"/>
        <activity android:name=".SignupActivity" android:theme="@style/AppTheme.NoTitleBar"/>
        <activity android:name=".LocationsActivity" android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".NewLocationActivity" />
        <provider
            android:authorities="pt.ulisboa.tecnico.locmess"
            android:name="pt.ulisboa.tecnico.locmess.data.LocmessContentProvider"
            android:exported="false">

        </provider>

        <service android:name=".wifidirect.WifiDirectService" />
        <service android:name="pt.inesc.termite.wifidirect.service.SimWifiP2pService" />

    </application>

</manifest>