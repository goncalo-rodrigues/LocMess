<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ulisboa.tecnico.locmess">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".InitActivity"
            android:theme="@style/AppTheme.NoTitleBar" >
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>
        <activity android:name=".MainActivity" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".PostMessageActivity" android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".ProfileActivity" />
        <activity android:name=".LoginActivity" android:theme="@style/AppTheme.NoTitleBar"/>
        <activity android:name=".SignupActivity" android:theme="@style/AppTheme.NoTitleBar"/>
        <activity android:name=".LocationsActivity" android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".NewLocationActivity" />
        <provider
            android:authorities="pt.ulisboa.tecnico.locmess"
            android:name="pt.ulisboa.tecnico.locmess.data.LocmessContentProvider"
            android:exported="false">

        </provider>
        <receiver android:name=".wifidirect.WiFiDirectBroadcastReceiver">
            <intent-filter>
                <action android:name="android.net.wifi.p2p.STATE_CHANGED" />
                <action android:name="android.net.wifi.p2p.PEERS_CHANGED" />
                <action android:name="android.net.wifi.p2p.THIS_DEVICE_CHANGED" />
                <action android:name="android.net.wifi.p2p.CONNECTION_STATE_CHANGE" />
            </intent-filter>
        </receiver>
        <service android:name=".wifidirect.WifiDirectService" />
    </application>

</manifest>